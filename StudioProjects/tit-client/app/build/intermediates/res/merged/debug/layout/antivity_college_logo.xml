<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffededed"
    android:orientation="vertical" >

    <include layout="@layout/base_title" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_school_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/school_motto" />

            <TextView
                android:id="@+id/tv_school_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5.0dip"
                android:text="@string/update_time"
                android:textColor="#ff737373" />

          <ImageView
                android:id="@+id/iv_school_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:background="@drawable/school_badge" />

            <TextView
                android:id="@+id/tv_school_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5.0dip"
                android:text="@string/update_time"
                android:textColor="#ff737373" />

             <ImageView
                android:id="@+id/iv_school_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:background="@drawable/school_name" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>